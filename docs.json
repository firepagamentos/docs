{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Documentação da API FireBanking",
  "locale": "pt-BR",
  "colors": {
    "primary": "#FF6B35",
    "light": "#FF8C5A",
    "dark": "#E55A2B"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentação",
        "groups": [
          {
            "group": "Primeiros Passos",
            "pages": ["index", "quickstart", "authentication", "testing"]
          },
          {
            "group": "Conceitos Principais",
            "pages": [
              "concepts/payments",
              "concepts/subscriptions",
              "concepts/webhooks",
              "concepts/error-handling"
            ]
          }
        ]
      },
      {
        "tab": "API - Cartão de Crédito",
        "groups": [
          {
            "group": "Visão Geral",
            "pages": ["api-reference/introduction"]
          },
          {
            "group": "Pagamentos",
            "pages": [
              "api-reference/payment/create",
              "api-reference/payment/list",
              "api-reference/payment/get",
              "api-reference/payment/capture",
              "api-reference/payment/refund",
              "api-reference/payment/cancel",
              "api-reference/payment/sync"
            ]
          },
          {
            "group": "Tokens de Cartão",
            "pages": [
              "api-reference/payment/create-token",
              "api-reference/payment/get-tokens"
            ]
          },
          {
            "group": "Gestão de Compradores",
            "pages": ["api-reference/buyer/create", "api-reference/buyer/list"]
          },
          {
            "group": "Assinaturas",
            "pages": [
              "api-reference/subscription/create",
              "api-reference/subscription/update",
              "api-reference/subscription/cancel"
            ]
          },
          {
            "group": "Conta",
            "pages": ["api-reference/account/balance"]
          },
          {
            "group": "Webhooks",
            "pages": [
              "api-reference/webhooks/barte",
              "api-reference/webhooks/provider"
            ]
          },
          {
            "group": "Sistema",
            "pages": ["api-reference/health/check"]
          },
          {
            "group": "APIs Internas",
            "pages": [
              "api-reference/internal/balance",
              "api-reference/internal/redeem",
              "api-reference/internal/payment"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Suporte",
          "href": "mailto:api-support@firebanking.com",
          "icon": "envelope"
        },
        {
          "anchor": "Dashboard",
          "href": "https://dashboard.firebanking.com",
          "icon": "chart-line"
        },
        {
          "anchor": "Status",
          "href": "https://status.firebanking.com",
          "icon": "signal"
        }
      ],
      "languages": [
        {
          "language": "pt-BR",
          "href": "https://docs.firebanking.com",
          "default": true
        }
      ]
    }
  },
  "logo": {
    "light": "https://link-pagamento.firebanking.dev/logo-fire/logo-white.svg",
    "dark": "https://link-pagamento.firebanking.dev/logo-fire/logo-white.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Suporte",
        "href": "mailto:api-support@firebanking.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://dashboard.firebanking.com"
    }
  },
  "footer": {
    "socials": {
      "website": "https://firebanking.com",
      "github": "https://github.com/firebanking",
      "linkedin": "https://linkedin.com/company/firebanking"
    }
  }
}
